{
    "log": {
        "level" : "debug",
        "console" : true,
        "maxsize": 10000000,
        "maxFiles": 10,
        "filename" : "server.log"
    },
    "server" : {
        "bindAddress": "0.0.0.0",
        "listenPort" : "$PORT",
        "middlewares": {
            "bo": {
                "dir": "../vendor/bo",
                "prefix": "/bo/",
                "db" : {
                    "host": "$DB_HOST",
                    "port": "$DB_PORT",
                    "user": "$DB_USER",    
                    "password": "$DB_PASSWORD",
                    "database": "$DB_NAME"    
                }
            },
            "user": {
                "dir": "../vendor/user",
                "prefix": "/user/",
                "accountActivationTokenExpirationTime" : 172800,
                "resetPasswordTokenExpirationTime" : 172800,
                "smtp" : {
                    "smtpServer" : "$SMTP_SERVER",
                    "smtpPort" : "$SMTP_PORT",
                    "smtpSecure" : true,
                    "smtpUser" : "$SMTP_USER",
                    "smtpPassword" : "$SMTP_PASSWORD"    
                },
                "db" : {
                    "host": "$DB_HOST",
                    "port": "$DB_PORT",
                    "user": "$DB_USER",    
                    "password": "$DB_PASSWORD",
                    "database": "$DB_NAME"    
                }
            },
            "applee": {
                "dir": "../module/applee",
                "prefix": "/applee/"
            },
            "studio": {
                "dir": "../vendor/studio",
                "prefix": "/studio/",
                "db" : {
                    "host": "$DB_HOST",
                    "port": "$DB_PORT",
                    "user": "$DB_USER",    
                    "password": "$DB_PASSWORD",
                    "database": "$DB_NAME"    
                }
            }
        },
        "config": {
            "dir": "../config",
            "current": ["sedp"]
        }
    }
}