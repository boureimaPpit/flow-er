{
    "log": {
        "level" : "debug",
        "console" : true,
        "maxsize": 10000000,
        "maxFiles": 10,
        "filename" : "server.log"
    },
    "server" : {
        "bindAddress": "0.0.0.0",
        "listenPort" : "$PORT",
        "middlewares": {
            "bo": {
                "dir": "../vendor/bo",
                "prefix": "/bo/",
                "db" : {
                    "host": "localhost",
                    "port": 8889,
                    "user": "root",    
                    "password": "root",
                    "database": "ppit4"    
                }
            },
            "user": {
                "dir": "../vendor/user",
                "prefix": "/user/",
                "accountActivationTokenExpirationTime" : 172800,
                "resetPasswordTokenExpirationTime" : 172800,
                "smtp" : {
                    "smtpServer" : "$SMTP_SERVER",
                    "smtpPort" : "$SMTP_PORT",
                    "smtpSecure" : true,
                    "smtpUser" : "$SMTP_USER",
                    "smtpPassword" : "$SMTP_PASSWORD"    
                },
                "db" : {
                    "host": "localhost",
                    "port": 8889,
                    "user": "root",    
                    "password": "root",
                    "database": "ppit4"    
                }
            },
            "applee": {
                "dir": "../module/applee",
                "prefix": "/applee/"
            }
        }
    }
}