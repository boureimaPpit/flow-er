{
    "log": {
        "level" : "debug",
        "console" : true,
        "maxsize": 10000000,
        "maxFiles": 10,
        "filename" : "server.log"
    },
    "server" : {
        "bindAddress": "0.0.0.0",
        "listenPort" : "$PORT",
        "middlewares": {
            "bo": {
                "dir": "../vendor/bo",
                "prefix": "/bo/",
                "db" : {
                    "host": "$DB_HOST",
                    "port": "$DB_PORT",
                    "user": "$DB_USER",    
                    "password": "$DB_PASSWORD"
                }
            },
       },
        "config": {
            "dir": "../config",
            "dbName": "$DB_NAME",
            "current": []
        }
    }
}